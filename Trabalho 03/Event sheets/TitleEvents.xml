                            <param id="0" name="Cursor style">0</param>
                        </action>
                    </actions>
                </event-block>
                <comment>On option click, goes to the selected mode.</comment>
                <event-block sid="6489771782398642">
                    <conditions>
                        <condition id="6" name="On object clicked" sid="2999366339358686" type="Mouse">
