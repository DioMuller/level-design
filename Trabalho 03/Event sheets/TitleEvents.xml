                    <conditions>
                        <condition id="0" name="On key pressed" sid="8691480389664395" type="Keyboard">
                            <param id="0" name="Key">83 (S)</param>
                        </condition>
                        <condition id="0" name="On key pressed" sid="2281165486981312" type="Keyboard">
